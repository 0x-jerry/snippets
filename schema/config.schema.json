{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Snippet Config Schema",
  "type": "object",
  "properties": {
    "snippets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string"
          },
          "language": {
            "type": "string"
          }
        },
        "required": [
          "url"
        ]
      }
    }
  },
  "required": [
    "snippets"
  ]
}